---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === "/" + subpath?.[0];
---

<a
  href={href}
  class:list={[
    "px-4 py-1.5 rounded-full hover:text-neutral-900 hover:bg-neutral-100 font-medium transition-colors",
    className,
    {
      "bg-neutral-900 text-neutral-100 hover:bg-neutral-900 hover:text-white":
        isActive,
    },
  ]}
  {...props}
>
  <slot />
</a>
